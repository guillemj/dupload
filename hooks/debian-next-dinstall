use strict;
use warnings;

use Time::Piece;
use Time::Seconds;

# https://ftp-master.debian.org/dinstall.html
my $start = '01:52';
my $every = 6 * ONE_HOUR;

my $now = localtime;
my $t = $now->truncate(to => 'day') +
        $now->tzoffset +
        Time::Piece->strptime($start, '%H:%M')->epoch;

for (my $iter = 0; ; $iter++) {
    my $it = $t + ($iter * $every);
    my $delta = $it - $now->epoch;

    if ($delta->epoch > 0) {
        print "\n";
        printf "Next Debian dinstall run is at: %s\n", $it->cdate;
        exit 0;
    }
}

1;
